<div class="row">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
  	      <div class="col-xs-10 col-sm-10 col-md-6">
  		      <div class="alert alert-danger" role="alert">
  		        <font color = "FF0000"><%= msg %></font>
  	        </div>
  	      </div>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>