<ul class="nav nav-tabs">
	<li class="active"> <%= link_to 'Active', active_repairs_path %> </li>
	<li> <%= link_to 'Inactive', inactive_repairs_path%> </li>
</ul>

<br>

<div class="panel panel-success">
	<div class="panel-heading"><strong>Ready for pickup</strong></div>
	<table class="table">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Date Submitted</th>
		</tr>
		<% @repairs.where(:status => 1).each do |repair| %>
			<tr>
				<td> <%= link_to repair.id, repair_path(repair) %>	</td>
				<td> <%= repair.customer_first_name %> <%= repair.customer_last_name %></td>
				<td> <%= repair.created_at.strftime("%x %I:%M %p") %> </td>
			</tr>
		<% end %>
	</table>
</div>

<hr>

<div class="panel panel-danger">
	<div class="panel-heading"><strong>Active</strong></div>
	<table class="table">
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Date Submitted</th>
			<th>Problem</th>
			<th>Device</th>
			
		</tr>
		<% @repairs.where(:status => 0).each do |repair| %>
				<tr>
					<td> <%= link_to repair.id, repair_path(repair) %>	</td>
					<td> <%= repair.customer_first_name %> <%= repair.customer_last_name %> </td>
					<td> <%= repair.created_at.strftime("%x %I:%M %p") %> </td>
					<td> <%= if repair.device_problem_description.length < 150
									   repair.device_problem_description
									 else 
									   repair.device_problem_description[0..150] + "..."
									 end %>
					<td> <%= repair.device_description[0..50] %> </td>
				</tr>
			<% end %>
	</table>
</div>

