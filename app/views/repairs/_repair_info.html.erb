<div class="row">

  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Customer</h4></div>
      <div class="panel-body">  
        <div class="list-group" style="display: inline-block;">
          <h5 class="list-group-item-heading"> <b>Name:</b></h5>
          <p class="list-group-item-text"> <%= @repair.customer_first_name %> <%= @repair.customer_last_name %> </p>
          <h5 class="list-group-item-heading"> <b>Student ID/Perm #:</b> </h5>
          <p class="list-group-item-text"> <%= @repair.customer_id_number %> </p>
          <h5 class="list-group-item-heading"><b>Email:</b></h5>
          <p class="list-group-item-text"> <%= @repair.customer_email %> </p>
          <h5 class="list-group-item-heading"><b>Phone #:</b></h5>
          <p class="list-group-item-text"> <%= @repair.customer_phone_number %> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Device</h4></div>
      <div class="panel-body"> 
        <div class="list-group" style="display: inline-block;">
          <h5 class="list-group-item-heading"> <b>Description:</b></h5>
          <p class="list-group-item-text"> <%= @repair.device_description %> </p>
          <h5 class="list-group-item-heading"> <b>Password:</b> </h5>
          <p class="list-group-item-text"> <%= @repair.device_password %> </p>
          <h5 class="list-group-item-heading"><b>Serial #:</b></h5>
          <p class="list-group-item-text"> <%= @repair.device_serial_number %> </p>
          <h5 class="list-group-item-heading"><b>Accessories:</b></h5>
          <p class="list-group-item-text"> <%= @repair.accessories_description %> </p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading"><h4>Problem Description</h4></div>
      <div class="panel-body">
        <%= @repair.device_problem_description %>
      </div>
    </div>
  </div>

</div>